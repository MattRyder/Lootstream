= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: 'user-sign-in' }) do |f|
  .form-inputs
    = f.input :email, required: false, autofocus: true, input_html: { class: 'form-control' }, placeholder: 'Enter email address', label: false

    = f.input :password, required: false, input_html: { class: 'form-control' }, placeholder: 'Enter password', label: false

    .checkbox
      = f.input :remember_me, as: :boolean, inline_label: true, label: false if devise_mapping.rememberable?

  .form-actions
    = f.button :submit, "Sign in", class: "btn-looted pull-right"