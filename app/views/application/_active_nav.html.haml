.collapse.navbar-collapse#navi-collapse
  %ul.nav.navbar-nav
    %li= link_to 'Games', channels_path
    %li= link_to 'Wagers', channel_wagers_path(params[:id]) if channel_view?
  %ul.nav.navbar-nav.navbar-right
    -if @channel && @balance
      %li#stream-balance
        = link_to "Stream Balance: #{number_to_currency(@balance.balance, unit: '$')}", '#'
    %li
      = link_to 'My Profile', user_path(id: current_user)
    %li.dropdown
      = link_to "#", "data-toggle" => "dropdown", role: "button", "aria-expanded" => false do
        %i.fa.fa-ellipsis-h
      %ul.dropdown-menu{role: "menu"}
        %li
          = link_to "Sign Out", destroy_user_session_path, method: :delete
