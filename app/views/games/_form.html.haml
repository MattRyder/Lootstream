= simple_form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.input :name

  .field
    = f.input :game_type, collection: Game.types, include_blank: false

  .field
    = f.input :description

  .field
    = f.input :max_options
  .actions.row{style: "margin-top: 25px;"}
    .col-xs-3
      = link_to 'Back', games_path, class: 'btn btn-default'
    .col-xs-2.pull-right
      = f.submit 'Save', class: 'btn btn-success pull-right'
