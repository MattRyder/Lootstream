%h1 Listing games

%table.table.table-responsive
  %tr
    %th Name
    %th Max options
    %th Type
    %th Description
    %th
    %th
    %th

  - @games.each do |game|
    %tr
      %td= game.name
      %td= game.max_options
      %td= game.game_type
      %td= game.description
      %td= link_to 'Show', game_path(game)
      %td= link_to 'Edit', edit_game_path(game)
      %td= link_to 'Destroy', game_path(game), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Game', new_game_path
